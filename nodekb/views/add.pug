doctype html
html
    head
        title Delicipe
    body
        h1 #{title}
        form(method='POST', action='/article/add')
            #form-group
                label Title:
                input.form-control(name='title',type='text')
            #form-group
                label Arthor:
                input.form-control(name='author',type='text')
            #form-group
                label Body:
                textarea.form-control(name='body')
            input.btn.btn-primary(type='submit',value='Submit')